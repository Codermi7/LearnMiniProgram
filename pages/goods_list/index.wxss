.goods_list .list navigator {
  display: flex;
  padding: 20rpx;
  justify-content: center;
  position: relative;
}
.goods_list .list navigator image {
  flex: 2;
}
.goods_list .list navigator .goods_info {
  padding-left: 20rpx;
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_list .list navigator .goods_info .goods_name {
  align-content: start;
}
.goods_list .list navigator .goods_info .goods_price {
  color: #f40;
}
.goods_list .list navigator::after {
  position: absolute;
  content: '';
  background: #e5e5e5;
  height: 1px;
  left: 40%;
  bottom: 0;
  width: 100%;
}
